Vagrant.configure("2") do |config|

  config.vm.define "vptdemos1" do |vptdemo1|
    vptdemos1.vm.box = "StefanScherer/windows_10"
    vptdemos1.windows.halt_timeout = 20
    vptdemos1.winrm.username = "vagrant"
    vptdemos1.winrm.password = "vagrant"
    vptdemos1.vm.guest = :windows
    vptdemos1.vm.communicator = "winrm"

    vptdemos1.vm.hostname = "vptdemos1"
    vptdemos1.windows.set_work_network = true

    vptdemos1.vm.network :forwarded_port, guest: 5985, host: 14985, id: "winrm", auto_correct: true
    vptdemos1.vm.network :forwarded_port, guest: 3389, host: 14389, id: "rdp", auto_correct: true
    vptdemos1.vm.network :forwarded_port, guest: 22, host: 14222, id: "ssh", auto_correct: true

    vptdemos1.vm.provider :virtualbox do |v, override|
      override.vm.network :private_network, ip: "10.10.117.14"
      v.customize ["modifyvm", :id, "--natdnshostresolver1", "on"]
      v.gui = true
      v.customize ["modifyvm", :id, "--vram", 32]
      v.customize ["modifyvm", :id, "--memory", "4096"]
      v.customize ["modifyvm", :id, "--audio", "none"]
      v.customize ["modifyvm", :id, "--clipboard", "bidirectional"]
      v.customize ["modifyvm", :id, "--draganddrop", "hosttoguest"]
      v.customize ["modifyvm", :id, "--usb", "off"]
      # linked clones for speed and size
      v.linked_clone = true if Vagrant::VERSION >= '1.8.0'
    end

  end
end
